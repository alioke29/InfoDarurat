                //});

        $('.aktivitasTable').find("tbody").on("click", "td", function () {

            var col = $(this).parent().children().index($(this));
            var row = $(this).closest('tr').index();


            // DELETE COLUMN
            if (col == 6) {

                $('.aktivitasTable tbody').find('tr:eq(' + row + ')').find('td:eq(6)').find('#divAksi').toggle();
            }

        });


    </script>
}
